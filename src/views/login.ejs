<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include("partials/head") %>
  </head>

  <body>
    <!-- Encabezado -->
    <%- include("partials/header") %>
    <!-- Fin Encabezado -->

    <main class="u-section-row padding-tb">
      <section class="main_login">
        <div class="tabset">
          <!-- Tab 1 Inicio de Sesion-->
          <input type="radio" name="tabset" id="tab1" aria-controls="marzen" <%
          if (registro==0) { %> checked <% } %> >
          <label for="tab1">Iniciar Sesion</label>
          <!-- Tab 2 Registro-->
          <input type="radio" name="tabset" id="tab2" aria-controls="rauchbier"
          <% if (registro==1) { %> checked <% } %>>
          <label for="tab2">Registrarse</label>

          <div class="tab-panels">
            <section id="marzen" class="tab-panel">
              <h2 class="reg-login">Iniciar Sesion</h2>

              <form action="/user/login" method="post" class="formulario formlogin"  enctype="multipart/form-data">
                <label for="emailLogin">Usuario</label>
                <input
                  type="text"
                  name="emailLogin"
                  id="email"
                  class="border-box"
                  value="<%= locals.oldValues? locals.oldValues.email:null %>"
                />
                <% if (locals.errors && errors.emailLogin) { %>
                <p class="errorMsg"><%= errors.emailLogin.msg %></p>
                <% } %>
                <div id="errorLogin"></div>

                <label for="password">Ingrese su password</label>
                <input
                  type="password"
                  name="password"
                  id="password"
                  class="border-box"
                />
                <% if (locals.errors && errors.password) { %>
                <p class="errorMsg"><%= errors.password.msg %></p>
                <% } %>
                <div id="errorPassLogin"></div>
                <div class="botones">
                  <button class="submit" type="submit">Iniciar Sesión</button>
                </div>
              </form>
            </section>
           
            <section id="rauchbier" class="tab-panel">
              <h2 class="reg-login">Registrarse</h2>

              
              <form
                action="/user/registroUsuario"
                method="post"
                enctype="multipart/form-data"
                class="formulario bg-gris-claro formReg"
                id="formRegistro"
              >
                <label for="first_name">Nombre</label>
                <input
                  type="text"
                  name="first_name"
                  id="first_name"
                  class="border-box is-invalid"
                  value="<%= locals.oldValues? locals.oldValues.first_name:null %>"
                />

                <% if (locals.errors && errors.first_name) { %>
                <p class="errorMsg"><%= errors.first_name.msg %></p>
                <% } %>
                <div id="errorMessages"></div>

                <label for="last_name">Apellido</label>
                <input
                  type="text"
                  name="last_name"
                  id="last_name"
                  class="border-box"
                  value="<%= locals.oldValues? locals.oldValues.last_name:null %>"
                />
                <% if (locals.errors && errors.last_name) { %>
                <p class="errorMsg"><%= errors.last_name.msg %></p>
                <% } %>
                <div id="errorMessages"></div>

                <label for="identification_document">DNI</label>
                <input
                  type="text"
                  name="identification_document"
                  id="identification_document"
                  class="border-box"
                  value="<%= locals.oldValues? locals.oldValues.identification_document:null %>"
                />
                <% if (locals.errors && errors.identification_document) { %>
                <p class="errorMsg">
                  <%= errors.identification_document.msg %>
                </p>
                <% } %>

                <label for="email">Correo electrónico</label>
                <input
                  type="text"
                  name="email"
                  id="emailRegistro"
                  class="border-box"
                  value="<%= locals.oldValues? locals.oldValues.email:null %>"
                />
                <% if (locals.errors && errors.email) { %>
                <p class="errorMsg"><%= errors.email.msg %></p>
                <% } %>
                <div id="errorMessages"></div>

                <label for="user">Usuario</label>
                <input
                  type="text"
                  name="user"
                  id="user"
                  class="border-box"
                  value="<%= locals.oldValues? locals.oldValues.user:null %>"
                />
                <% if (locals.errors && errors.user) { %>
                <p class="errorMsg"><%= errors.user.msg %></p>
                <% } %>
                <label for="birthdate">Fecha de nacimiento</label>
                <input
                  type="date"
                  name="birthdate"
                  id="birthdate"
                  class="border-box"
                  value="<%= locals.oldValues? locals.oldValues.birthdate:null %>"
                />
                <% if (locals.errors && errors.birthdate){ %>
                <p class="errorMsg"><%= errors.birthdate.msg %></p>
                <% } %>
                <label for="adress">Domicilio</label>
                <input
                  type="text"
                  name="adress"
                  id="adress"
                  class="border-box"
                  value="<%= locals.oldValues? locals.oldValues.adress:null %>"
                />
                <% if (locals.errors && errors.adress) { %>
                <p class="errorMsg"><%= errors.adress.msg %></p>
                <% } %>

                <label for="password1">Ingrese su password</label>
                <input
                  type="password"
                  name="password1"
                  id="password1"
                  class="border-box"
                />

                <% if (locals.errors && errors.password) { %>
                <p class="errorMsg"><%= errors.password.msg %></p>
                <% } %>
              

                <label for="confirmarpasswordReg">Confirme password</label>
                <input
                  type="password"
                  name="confirmarpasswordReg"
                  id="confirmarpasswordReg"
                  class="border-box"
                />
                <% if (locals.errors && errors.confirmarpassword){ %>
                <p class="errorMsg"><%= errors.confirmarpassword.msg %></p>
                <% } %>
                <div id="errorPassword"></div>

                <label for="image">Seleccione una imagen</label>
                <input
                  type="file"
                  id="image"
                  name="image"
                  accept="image/png,image/jpeg,image/jpg"
                  class="border-box"
               
                />

                <div id="errorMessages"></div>

                <div class="botones">
                  <button class="submit" type="submit">Registrarme</button>
                  <button class="rest" type="reset">Borrar</button>
                </div>
              </form>
            </section>
          </div>
        </div>
        <!-- </div> -->
      </section>
    </main>

    <!-- footer -->
    <%- include("partials/footer") %>
    <script src="/js/formulario_fe.js"></script>
  </body>
</html>
